go_library (
    name = "customers_main",
    srcs = ["server/main.go"],
    importpath = "ecommerce_dashboard/pkgs/customers",
    visibility = ["//visibility:public"],
    deps = [
        ":customers_go_proto",
        ":customers_service",
        "@org_golang_google_grpc//:grpc",
        "@org_golang_google_grpc//reflection",
        "@com_github_jackc_pgx_v5//:pgx",
        "@com_github_google_uuid//:uuid"
    ]
)

go_binary(
    name = "customers_main_binary",
        srcs = ["server/main.go"],
        visibility = ["//visibility:public"],
        deps = [
            ":customers_go_proto",
            ":customers_service",
            "@org_golang_google_grpc//:grpc",
            "@com_github_jackc_pgx_v5//:pgx",
            "@com_github_google_uuid//:uuid"
        ]
)

go_image (
    name = "image",
    base = "@go_base//image",
    embed = [":customers_main"],
    goos = "linux",
    goarch = "amd64",
    visibility = ["//visibility:public"],
)